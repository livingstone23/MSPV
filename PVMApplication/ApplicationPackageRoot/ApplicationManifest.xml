<?xml version="1.0" encoding="utf-8"?>
<ApplicationManifest ApplicationTypeName="PVMApplicationType"
                     ApplicationTypeVersion="1.0.0"
                     xmlns="http://schemas.microsoft.com/2011/01/fabric"
                     xmlns:xsd="http://www.w3.org/2001/XMLSchema"
                     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Parameters>
    <Parameter Name="PVM.Web_InstanceCount" DefaultValue="-1" />
    <Parameter Name="PVM.Web_Isolation" DefaultValue="default" />
  </Parameters>
  <!-- Importe el elemento ServiceManifest del ServicePackage. Los elementos ServiceManifestName y ServiceManifestVersion 
       deben coincidir con los atributos Name y Version del elemento ServiceManifest definido en el 
       archivo ServiceManifest.xml. -->
  <ServiceManifestImport>
    <ServiceManifestRef ServiceManifestName="PVM.WebPkg" ServiceManifestVersion="1.0.0" />
    <Policies>
      <ContainerHostPolicies CodePackageRef="Code" Isolation="[PVM.Web_Isolation]">
        <PortBinding ContainerPort="80" EndpointRef="PVM.WebTypeEndpoint" />
      </ContainerHostPolicies>
    </Policies>
  </ServiceManifestImport>
  <DefaultServices>
    <!-- La sección siguiente crea instancias de tipos de servicio cuando se crea una 
         instancia de este tipo de aplicación. También puede crear una o varias instancias de tipo de servicio 
         usando el módulo ServiceFabric de PowerShell.

         El atributo ServiceTypeName siguiente debe coincidir con el nombre definido en el archivo ServiceManifest.xml importado. -->
    <Service Name="PVM.Web" ServicePackageActivationMode="ExclusiveProcess">
      <StatelessService ServiceTypeName="PVM.WebType" InstanceCount="[PVM.Web_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
  </DefaultServices>
</ApplicationManifest>